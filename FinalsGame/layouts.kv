#: import FadeTransition kivy.uix.screenmanager.FadeTransition

ScreenMgr:
	transition: FadeTransition()
	MainMenu
	GameScreen
	GameOverScreen
	HelpScreen
	

<MainMenu>:
	name: 'mainmenu'
	BoxLayout:
		orientation: 'vertical'
		Image:
			source: 'assets/img/logo.png'
			size_hint_y: 30
		BoxLayout:
			spacing: dp(30)
			size_hint_y: 70
			padding: [dp(200), dp(10)]
			orientation: 'vertical'
			Button:
				text: 'Play'
				font_size: '50sp'
				on_release: app.root.current = 'gamescreen'
				size_hint_y: 40
			Button:
				text: 'Controls & Help'
				font_size: '50sp'
				on_release: app.root.current = 'helpscreen'
				size_hint_y: 40
			Button:
				text: 'Quit'
				font_size: '50sp'
				on_press: app.stop()
				size_hint_y: 40
			Label:
				text: 'Ragul Balaji 2020 (C) All Rights Reserved'
				font_size: sp(15)
				size_hint_y: 20

<GameScreen>:
	name: 'gamescreen'
	GameCanvas

<HelpScreen>:
	name: 'helpscreen'
	FloatLayout:
		Image:
			source: 'assets/img/controls.png'
			size_hint: 1, 1
			allow_stretch: True
			keep_ratio: True
		Button:
			text: 'Back to Menu'
			font_size: '50sp'
			on_release: app.root.current = 'mainmenu'
			size_hint: 0.3, 0.1

<GameOverScreen>:
	name: 'gameoverscreen'
	FloatLayout:
		Image:
			source: 'assets/img/gameover.png'
			size_hint: 1, 1
			allow_stretch: True
			keep_ratio: True
		GameOverWidget
		Button:
			text: 'Back to Menu'
			font_size: '50sp'
			on_release: app.root.current = 'mainmenu'
			size_hint: 0.3, 0.1
